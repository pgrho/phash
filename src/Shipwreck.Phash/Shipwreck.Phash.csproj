  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Imaging\Generated Codes\Wrappers.cs">
      <DesignTime>True</DesignTime>
